<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        xmlns:conv="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="ניהול קריאות" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <conv:CallStateToHebrewConverter x:Key="CallStateToHebrewConverter"/>
        <conv:CallTypeToHebrewConverter x:Key="CallTypeToHebrewConverter"/>
        <conv:CallInListFieldsToHebrewConverter x:Key="CallInListFieldsToHebrewConverter"/>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Style="{StaticResource ModernCard}" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M21,19V20H3V19L5,17V11C5,7.9 7.03,5.17 10,4.29C10,4.19 10,4.1 10,4A2,2 0 0,1 12,2A2,2 0 0,1 14,4C14,4.1 14,4.19 14,4.29C16.97,5.17 19,7.9 19,11V17L21,19M14,21A2,2 0 0,1 12,23A2,2 0 0,1 10,21"
                          Fill="#4A90E2" 
                          Width="32" 
                          Height="32"
                          Stretch="Uniform"
                          Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="ניהול קריאות" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="Call Management System" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Stats Counter -->
                <Border Grid.Column="1" 
                        Background="#E8F5E9" 
                        CornerRadius="8" 
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                        <TextBlock Text="סה״כ קריאות:" 
                                   FontSize="14" 
                                   Foreground="#388E3C"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding CallsList.Count}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#2E7D32"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
Style="{StaticResource ModernCard}" 
Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- כפתור הוסף - ימין -->
                    <ColumnDefinition Width="*"/>
                    <!-- רווח מרכזי -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- סמל סינון -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- קומבובוקס סינון -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- טקסט "סנן לפי" -->
                    <ColumnDefinition Width="20"/>
                    <!-- רווח קטן -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- סמל מיון -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- קומבובוקס מיון -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- טקסט "מיין לפי" -->
                </Grid.ColumnDefinitions>

                <!-- Add Button - ימין מצד -->
                <Button Grid.Column="0" 
                        Style="{StaticResource AddButton}"
                        Click="btnAdd_Click"
                        Width="190"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                              Fill="White" 
                              Width="18" 
                              Height="18"
                              Stretch="Uniform"
                              Margin="0,0,8,0"/>
                        <TextBlock Text="הוסף קריאה חדשה"/>
                    </StackPanel>
                </Button>

                <!-- ========== קבוצת סינון - שמאל ========== -->

                <!-- Filter Icon -->
                <Path Grid.Column="2"
                      Data="M14,12V19.88C14.04,20.18 13.94,20.5 13.71,20.71C13.32,21.1 12.69,21.1 12.3,20.71L10.29,18.7C10.06,18.47 9.96,18.16 10,17.87V12H9.97L4.21,4.62C3.87,4.19 3.95,3.56 4.38,3.22C4.57,3.08 4.78,3 5,3V3H19V3C19.22,3 19.43,3.08 19.62,3.22C20.05,3.56 20.13,4.19 19.79,4.62L14.03,12H14Z"
                      Fill="#4A90E2" 
                      Width="20" 
                      Height="20"
                      Stretch="Uniform"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>

                <!-- Filter ComboBox -->
                <ComboBox Grid.Column="3"
                    Style="{StaticResource ModernComboBox}"
                    ItemsSource="{Binding Source={StaticResource CallStateKey}}"
                    SelectedValue="{Binding TypeCall, Mode=TwoWay}"
                    Width="200"
                    SelectedValuePath="."
                    HorizontalContentAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,10,0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border Background="Transparent">
                                            <ContentPresenter HorizontalAlignment="Right"
                                              TextBlock.TextAlignment="Right"
                                              Margin="5,0,10,0"
                                              RecognizesAccessKey="True"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>

                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource CallStateToHebrewConverter}}"
                       TextAlignment="Right"
                       HorizontalAlignment="Right"
                       Margin="5,0,10,0"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Filter Label -->
                <TextBlock Grid.Column="4"
                           Text=":סנן לפי" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"
                           VerticalAlignment="Center"
                           Margin="0,0,0,0"/>

                <!-- ========== קבוצת מיון ========== -->

                <!-- Sort Icon (סמל שונה למיון) -->
                <Path Grid.Column="6"
                      Data="M19,17H22L18,21L14,17H17V3H19M2,17H12V19H2M6,5V7H2V5M2,11H9V13H2V11Z"
                      Fill="#4A90E2" 
                      Width="20" 
                      Height="20"
                      Stretch="Uniform"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0"/>

                <!-- Sort ComboBox -->
                <ComboBox Grid.Column="7"
                          Style="{StaticResource ModernComboBox}"
                          Width="200"
                          ItemsSource="{Binding Source={StaticResource CallInListFieldsKey}}"
                          SelectedValue="{Binding TypeSort, Mode=TwoWay}"
                          SelectedValuePath="."
                          HorizontalContentAlignment="Stretch"
                          Margin="0,0,10,0">

                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBoxItem">
                                        <Border Background="Transparent">
                                            <ContentPresenter HorizontalAlignment="Right"
                                            TextBlock.TextAlignment="Right"
                                            Margin="5,0,10,0"
                                            RecognizesAccessKey="True"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>

                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource CallInListFieldsToHebrewConverter}}"
                       TextAlignment="Right"
                       HorizontalAlignment="Right"
                       Margin="5,0,10,0"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Sort Label -->
                <TextBlock Grid.Column="8"
                           Text=":מיין לפי" 
                           FontSize="14" 
                           FontWeight="SemiBold" 
                           Foreground="#2C3E50"
                           VerticalAlignment="Center"
                           Margin="0,0,0,0"/>

            </Grid>
        </Border>
        
        <!-- DataGrid Section -->
        <Border Grid.Row="2" 
                Style="{StaticResource ModernCard}">
            <DataGrid ItemsSource="{Binding CallsList}"
                      SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                      MouseDoubleClick="DataGrid_MouseDoubleClick" SelectionChanged="DataGrid_SelectionChanged">


                <DataGrid.Columns>

                    <!-- ID Column -->
                    <DataGridTextColumn Header="מזהה קריאה" 
                        Binding="{Binding IdCall}" 
                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#34495E"/>
                                <Setter Property="Margin" Value="10,15,0,25"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Type Column -->
                    <DataGridTextColumn Header="סוג הקריאה"
                        Binding="{Binding Type, Converter={StaticResource CallTypeToHebrewConverter}}"
                        Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#5D6D7E"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="Margin" Value="10,15,0,25"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Description -->
                    <DataGridTextColumn Header="תיאור"
                        Binding="{Binding description}"
                        Width="Auto"
                        MinWidth="50">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="10,5,10,5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- שם מתנדב סופי -->
                    <DataGridTextColumn Header="שם מתנדב אחרון"
                    Binding="{Binding NameFinalVolunteer}"
                    Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="HorizontalAlignment" Value="left"/>
                                <Setter Property="Margin" Value="10,15,0,10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- סך כל השיבוצים -->
                    <DataGridTextColumn Header="כמות שיבוצים"
                    Binding="{Binding SumOfAssignments}"
                    Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Margin" Value="10,13,0,25"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Times -->
                    <DataGridTemplateColumn Header="זמנים" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" FlowDirection="RightToLeft">
                                    <!-- התחלה -->
                                    <TextBlock Text="{Binding CallStartTime, StringFormat='התחלה: {0:dd/MM/yyyy HH:mm}'}"
                           Foreground='Blue' FontSize='12'/>

                                    <!-- זמן שנותר -->
                                    <TextBlock Text="{Binding TimeRemaining, StringFormat='נשאר: {0:%d} ימים {0:hh\\:mm\\:ss}', TargetNullValue='נשאר: ---'}"
                           Foreground='#C62828' FontSize='12'/>

                                    <!-- משך טיפול כולל -->
                                    <TextBlock Text="{Binding SumTimeProcess, StringFormat='משך טיפול: {0:%d} ימים {0:hh\\:mm\\:ss}', TargetNullValue='משך טיפול: ---'}"
                           Foreground='#2E7D32' FontSize='12'/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <!-- Call State -->
                    <DataGridTextColumn Header="מצב קריאה"
                        Binding="{Binding CallState, Converter={StaticResource CallStateToHebrewConverter}}"
                        Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#6A1B9A"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Margin" Value="10,15,0,25"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Volunteers Assigned -->
                    <DataGridTemplateColumn Header="השתבצו לקריאה" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding SumOfAssignments, StringFormat='👥 {0}'}"
                                                Foreground="#2E86C1" FontWeight="SemiBold" Margin="0,15,0,0"/>
                                    <TextBlock Text=" מתנדבים" Foreground="#5D6D7E" Margin="3,15,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="פעולות" Width="350">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Update -->
                                    <Button Style="{StaticResource ModernButton}" Click="btnUpdate_Click" Margin="2,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25M20.71,7.04
                                                        C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29
                                                        C18,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04Z"
                                 Stretch="Uniform" Fill="White" Width="14" Height="14" Margin="0,0,5,0"/>
                                            <TextBlock Text="עדכן"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <!-- Delete -->
                                    <Button Style="{StaticResource DeleteButton}" Click="btnDelete_Click" Margin="2,0">
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19
                                                        M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                   Stretch="Uniform"  Fill="White" Width="14" Height="14" Margin="0,0,5,0"/>
                                            <TextBlock Text="מחק"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Cancel Assignment -->
                                    <Button Style="{StaticResource ModernButton}" Click="btnCancelAssignment_Click"
                                            Background="#2196F3" Foreground="White" 
                                            Margin="2,0" Padding="6,3" Cursor="Hand"
                                            BorderBrush="#1976D2" BorderThickness="1"
                                            ToolTip="בטל את ההשמה למתנדב">
                                        
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- סמל של ביטול/הסרה -->
                                            <Path Data="M12,2A10,10 0 1,0 22,12A10,10 0 0,0 12,2ZM15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41Z"
                                                  Fill="White" Stretch="Uniform" Width="14" Height="14" Margin="0,0,5,0"/>
                                            <TextBlock Text="בטל השמה" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>

                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Section -->
        <Border Grid.Row="3" 
                Background="#ECF0F1" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,20,0,0">
            <Grid>
                <TextBlock Text="💡 טיפ: לחץ פעמיים על שורה לעריכת הקריאה | Tip: Double-click a row to edit volunteer" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                <TextBlock HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Run Text="נבנה באהבה ❤️ | Built with" FontSize="11" Foreground="#95A5A6"/>
                    <Run Text="WPF" FontSize="11" FontWeight="Bold" Foreground="#4A90E2"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>