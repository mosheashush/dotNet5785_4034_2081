<Window x:Class="PL.Volunteer.MainWindowVolunteer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="מערכת ניהול מתנדבים - מסך ראשי" 
        Height="700" Width="1000"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="CanResize"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- סגנונות -->

        <!-- כותרת ראשית -->
        <Style x:Key="MainTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <!-- כותרת משנה -->
        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- כרטיס מידע -->
        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" 
                                    Direction="270" 
                                    ShadowDepth="3" 
                                    BlurRadius="10" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- כפתור ראשי גדול -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,20"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="MinHeight" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" 
                                                Direction="270" 
                                                ShadowDepth="4" 
                                                BlurRadius="12" 
                                                Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- תווית מידע -->
        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>

        <!-- ערך מודגש -->
        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Badge סטטוס -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- כותרת עליונה -->
            <RowDefinition Height="Auto"/>
            <!-- כרטיס פרטי מתנדב -->
            <RowDefinition Height="Auto"/>
            <!-- סטטוס קריאה -->
            <RowDefinition Height="*"/>
            <!-- תפריט ראשי -->
            <RowDefinition Height="Auto"/>
            <!-- פוטר -->
        </Grid.RowDefinitions>

        <!-- שורה 0: כותרת עליונה -->
        <Border Grid.Row="0" 
                Background="#2C3E50"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Style="{StaticResource MainTitleStyle}">
                        <Run Text="👋 שלום, "/>
                        <Run x:Name="VolunteerNameText" Text="..."/>
                    </TextBlock>
                    <TextBlock Text="ברוך הבא למערכת ניהול המתנדבים" 
                               Style="{StaticResource SubTitleStyle}"/>
                </StackPanel>

                <!-- כפתור יציאה -->
                <Button Grid.Column="1" 
                        Content="🚪 יציאה"
                        Background="#E74C3C"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="20,10"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="LogoutButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- שורה 1: כרטיס פרטי מתנדב -->
        <Border Grid.Row="1" Style="{StaticResource InfoCardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- אייקון -->
                <Border Grid.Column="0" 
                        Background="#3498DB"
                        Width="80" Height="80"
                        CornerRadius="40"
                        Margin="0,0,20,0">
                    <TextBlock Text="👤" 
                               FontSize="40"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- פרטים -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Style="{StaticResource InfoLabelStyle}">
                        <Run Text="ת.ז: "/>
                        <Run x:Name="IdText" Style="{StaticResource InfoValueStyle}"/>
                    </TextBlock>
                    <TextBlock Style="{StaticResource InfoLabelStyle}">
                        <Run Text="טלפון: "/>
                        <Run x:Name="PhoneText" Style="{StaticResource InfoValueStyle}"/>
                    </TextBlock>
                    <TextBlock Style="{StaticResource InfoLabelStyle}">
                        <Run Text="אימייל: "/>
                        <Run x:Name="EmailText" Style="{StaticResource InfoValueStyle}"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>

        <!-- שורה 2: סטטוס קריאה נוכחית -->
        <Border Grid.Row="2" Style="{StaticResource InfoCardStyle}">
            <StackPanel>
                <TextBlock Text="📞 קריאה נוכחית" 
                           FontSize="22" 
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,15"/>

                <!-- אם יש קריאה -->
                <Grid x:Name="HasCallPanel" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource InfoLabelStyle}">
                            <Run Text="מספר קריאה: "/>
                            <Run x:Name="CallIdText" FontWeight="Bold" Foreground="#3498DB"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource InfoLabelStyle}">
                            <Run Text="סוג: "/>
                            <Run x:Name="CallTypeText" FontWeight="Bold"/>
                        </TextBlock>
                        <TextBlock Style="{StaticResource InfoLabelStyle}">
                            <Run Text="כתובת: "/>
                            <Run x:Name="CallAddressText"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Badge סטטוס -->
                    <Border Grid.Column="1" 
                            Style="{StaticResource StatusBadgeStyle}"
                            Background="#27AE60">
                        <TextBlock Text="✓ בטיפול" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>
                </Grid>

                <!-- אם אין קריאה -->
                <StackPanel x:Name="NoCallPanel" 
                           HorizontalAlignment="Center"
                           Visibility="Visible">
                    <TextBlock Text="אין קריאה בטיפול כרגע" 
                              FontSize="18"
                              Foreground="Gray"
                              HorizontalAlignment="Center"
                              Margin="0,10"/>
                    <Border Style="{StaticResource StatusBadgeStyle}"
                            Background="#95A5A6">
                        <TextBlock Text="⭕ פנוי" 
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Foreground="White"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- שורה 3: תפריט ראשי - כפתורים -->
        <Grid Grid.Row="3" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- כפתור 1: הפרטים שלי -->
            <Button Grid.Row="0" Grid.Column="0"
                    Style="{StaticResource MainButtonStyle}"
                    Background="#3498DB"
                    Click="MyDetailsButton_Click">
                <StackPanel>
                    <TextBlock Text="👤" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="הפרטים שלי" 
                               FontSize="22" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="צפייה ועדכון פרטים אישיים" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Button>

            <!-- כפתור 2: בחירת קריאה -->
            <Button Grid.Row="0" Grid.Column="1"
                    x:Name="SelectCallButton"
                    Style="{StaticResource MainButtonStyle}"
                    Background="#27AE60"
                    Click="SelectCallButton_Click">
                <StackPanel>
                    <TextBlock Text="📋" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="בחירת קריאה לטיפול" 
                               FontSize="22" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="בחר קריאה חדשה לטיפול" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Button>

            <!-- כפתור 3: ניהול קריאה נוכחית -->
            <Button Grid.Row="1" Grid.Column="0"
                    x:Name="ManageCallButton"
                    Style="{StaticResource MainButtonStyle}"
                    Background="#F39C12"
                    Click="ManageCallButton_Click"
                    IsEnabled="False">
                <StackPanel>
                    <TextBlock Text="⚙️" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="ניהול קריאה נוכחית" 
                               FontSize="22" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="סיום או ביטול טיפול" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Button>

            <!-- כפתור 4: היסטוריית קריאות -->
            <Button Grid.Row="1" Grid.Column="1"
                    Style="{StaticResource MainButtonStyle}"
                    Background="#9B59B6"
                    Click="HistoryButton_Click">
                <StackPanel>
                    <TextBlock Text="📜" FontSize="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="היסטוריית קריאות" 
                               FontSize="22" 
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="צפייה בקריאות שטיפלתי בהן" 
                               FontSize="14" 
                               HorizontalAlignment="Center"
                               Opacity="0.8"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- שורה 4: פוטר -->
        <Border Grid.Row="4" 
                Background="#34495E"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- סטטיסטיקות -->
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal"
                           HorizontalAlignment="Left">
                    <Border Background="#27AE60" 
                            CornerRadius="5" 
                            Padding="10,5" 
                            Margin="5">
                        <TextBlock Foreground="White" FontSize="14">
                            <Run Text="✓ טופלו: "/>
                            <Run x:Name="CompletedCountText" FontWeight="Bold" Text="0"/>
                        </TextBlock>
                    </Border>
                    <Border Background="#E74C3C" 
                            CornerRadius="5" 
                            Padding="10,5" 
                            Margin="5">
                        <TextBlock Foreground="White" FontSize="14">
                            <Run Text="✗ בוטלו: "/>
                            <Run x:Name="CancelledCountText" FontWeight="Bold" Text="0"/>
                        </TextBlock>
                    </Border>
                </StackPanel>

                <!-- מידע מרכזי -->
                <TextBlock Grid.Column="1" 
                          Text="מערכת ניהול מתנדבים © 2025"
                          Foreground="White"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

                <!-- זמן אחרון -->
                <TextBlock Grid.Column="2" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Foreground="White"
                          FontSize="14">
                    <Run Text="עדכון אחרון: "/>
                    <Run x:Name="LastUpdateText" Text="--:--:--"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>
