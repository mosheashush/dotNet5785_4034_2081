<Window x:Class="PL.Volunteer.MainWindowVolunteer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="מערכת ניהול מתנדבים" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FlowDirection="RightToLeft"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Converter להמרת bool לנראות -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Converter הפוך -->
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>

        <!-- סגנונות כפתורים -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0B7DDA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DA190B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- סגנון כרטיס -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" 
                                    ShadowDepth="2" 
                                    Opacity="0.3"
                                    Color="Gray"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- סגנון טקסט כותרת -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- סגנון טקסט תווית -->
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <!-- סגנון טקסט ערך -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="10,5,0,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- כותרת עליונה -->
        <Border Grid.Row="0" 
                Background="#2196F3" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="מערכת ניהול מתנדבים"
                             FontSize="24"
                             FontWeight="Bold"
                             Foreground="White"/>
                    <TextBlock Text="{Binding CurrentVolunteer.FullName, FallbackValue='מתנדב'}"
                             FontSize="16"
                             Foreground="White"
                             Opacity="0.9"
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- תוכן ראשי -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- פרטים אישיים -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="הפרטים שלי" 
                                 Style="{StaticResource HeaderTextStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- שם מלא -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="שם מלא:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding CurrentVolunteer.FullName, FallbackValue='לא צוין'}" 
                                         Style="{StaticResource ValueTextStyle}"/>
                            </StackPanel>

                            <!-- תעודת זהות -->
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="תעודת זהות:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding CurrentVolunteer.id, FallbackValue='לא צוין'}" 
                                         Style="{StaticResource ValueTextStyle}"/>
                            </StackPanel>

                            <!-- טלפון -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="טלפון:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding CurrentVolunteer.CallNumber, FallbackValue='לא צוין'}" 
                                         Style="{StaticResource ValueTextStyle}"/>
                            </StackPanel>

                            <!-- אימייל -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="אימייל:" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding CurrentVolunteer.EmailAddress, FallbackValue='לא צוין'}" 
                                         Style="{StaticResource ValueTextStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="עדכן פרטים"
                                Style="{StaticResource SecondaryButton}"
                                Click="MyDetailsButton_Click"
                                HorizontalAlignment="Right"
                                Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>

                <!-- סטטוס קריאה נוכחית -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="הקריאה הנוכחית שלי" 
                                 Style="{StaticResource HeaderTextStyle}"/>

                        <!-- יש קריאה בטיפול -->
                        <StackPanel Visibility="{Binding HasCallInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border Background="#E8F5E9" 
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- מספר קריאה -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Text="מספר קריאה:" Style="{StaticResource LabelTextStyle}"/>
                                        <TextBlock Text="{Binding CurrentVolunteer.CallInProgress.IdCall}" 
                                                     Style="{StaticResource ValueTextStyle}"
                                                     FontWeight="Bold"
                                                     Foreground="#4CAF50"/>
                                    </StackPanel>
                                    <!-- סוג קריאה -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <TextBlock Text="סוג:" Style="{StaticResource LabelTextStyle}"/>
                                        <TextBlock Text="{Binding CurrentVolunteer.CallInProgress.Type}" Style="{StaticResource ValueTextStyle}"/>
                                    </StackPanel>
                                    <!-- כתובת -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                                        <TextBlock Text="כתובת:" Style="{StaticResource LabelTextStyle}"/>
                                        <TextBlock Text="{Binding CurrentVolunteer.CallInProgress.FullAddress, FallbackValue='לא צוין'}" 
                                                     Style="{StaticResource ValueTextStyle}"
                                                     TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- שני כפתורים באותה שורה -->
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <Button Content="נהל קריאה"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="ManageCallButton_Click"
                                        IsEnabled="{Binding HasCallInProgress}"
                                        Margin="0,0,10,0"/>

                                <Button Content="הושלם"
                                        Style="{StaticResource SecondaryButton}"
                                        Click="CompleteCallButton_Click"
                                        IsEnabled="{Binding HasCallInProgress}"
                                        Margin="4,0,4,0"/>

                                <Button Content="ביטול"
                                        Style="{StaticResource DeleteButton}"
                                        Click="DeleteCallButton_Click"
                                        IsEnabled="{Binding HasCallInProgress}"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- אין קריאה בטיפול -->
                        <StackPanel Visibility="{Binding HasCallInProgress, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <Border Background="#FFF3E0" 
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <TextBlock Text="אין קריאה בטיפול כרגע"
                                         FontSize="14"
                                         Foreground="#F57C00"
                                         TextAlignment="Center"/>
                            </Border>
                            <Button Content="בחר קריאה חדשה"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="SelectCallButton_Click"
                                    HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- סטטיסטיקות -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="הסטטיסטיקות שלי" 
                                 Style="{StaticResource HeaderTextStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- קריאות שהושלמו -->
                            <Border Grid.Column="0" 
                                    Background="#E3F2FD" 
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="0,0,5,0">
                                <StackPanel>
                                    <TextBlock Text="קריאות שהושלמו"
                                             FontSize="14"
                                             Foreground="#1976D2"
                                             TextAlignment="Center"
                                             Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding CurrentVolunteer.SumCallsCompleted, FallbackValue='0'}"
                                             FontSize="36"
                                             FontWeight="Bold"
                                             Foreground="#1976D2"
                                             TextAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- קריאות שבוטלו -->
                            <Border Grid.Column="1" 
                                    Background="#FFEBEE" 
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="5,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="קריאות שבוטלו"
                                             FontSize="14"
                                             Foreground="#C62828"
                                             TextAlignment="Center"
                                             Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding CurrentVolunteer.SumCallsConcluded, FallbackValue='0'}"
                                             FontSize="36"
                                             FontWeight="Bold"
                                             Foreground="#C62828"
                                             TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Button Content="היסטוריית קריאות"
                                Style="{StaticResource SecondaryButton}"
                                Click="HistoryButton_Click"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- תחתית -->
        <Border Grid.Row="2" 
                Background="#E0E0E0" 
                Padding="10">
            <TextBlock HorizontalAlignment="Center">
                <Run Text="עדכון אחרון:"/>
                <Run Text="{Binding LastUpdateTime, FallbackValue='--:--:--'}"/>
            </TextBlock>
        </Border>
    </Grid>
</Window>