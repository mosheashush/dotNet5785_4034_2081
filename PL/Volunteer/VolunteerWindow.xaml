<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Volunteer Details" Height="650" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closed="Window_Closed">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Volunteer Information" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- ID Field -->
        <Label Grid.Row="1" Grid.Column="0" Content="ID:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 IsReadOnly="True"
                 Background="LightGray"
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Full Name Field -->
        <Label Grid.Row="2" Grid.Column="0" Content="Full Name:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Phone Number Field -->
        <Label Grid.Row="3" Grid.Column="0" Content="Phone Number:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.CallNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Email Field -->
        <Label Grid.Row="4" Grid.Column="0" Content="Email Address:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.EmailAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Password Field -->
        <Label Grid.Row="5" Grid.Column="0" Content="Password:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <PasswordBox Grid.Row="5" Grid.Column="1" 
                     Name="passwordBox"
                     VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Address Field -->
        <Label Grid.Row="6" Grid.Column="0" Content="Full Address:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="6" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.FullCurrentAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="40" 
                 TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Latitude Field -->
        <Label Grid.Row="7" Grid.Column="0" Content="Latitude:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="7" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Longitude Field -->
        <Label Grid.Row="8" Grid.Column="0" Content="Longitude:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="8" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- User Type Field -->
        <Label Grid.Row="9" Grid.Column="0" Content="User Type:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <ComboBox Grid.Row="9" Grid.Column="1" 
                  ItemsSource="{Binding Source={StaticResource UserTypesCollectionKey}}"
                  SelectedValue="{Binding CurrentVolunteer.CurrentPosition, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                  VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Active Status Field -->
        <Label Grid.Row="10" Grid.Column="0" Content="Active Status:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <CheckBox Grid.Row="10" Grid.Column="1" 
                  IsChecked="{Binding CurrentVolunteer.Active, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                  Content="Is Active"
                  VerticalAlignment="Center" Margin="5"/>

        <!-- Max Distance Field -->
        <Label Grid.Row="11" Grid.Column="0" Content="Max Distance (km):" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <TextBox Grid.Row="11" Grid.Column="1" 
                 Text="{Binding CurrentVolunteer.MaxDistanceForCall, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Distance Type Field -->
        <Label Grid.Row="12" Grid.Column="0" Content="Distance Type:" 
               VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
        <ComboBox Grid.Row="12" Grid.Column="1" 
                  ItemsSource="{Binding Source={StaticResource DistanceTypesCollectionKey}}"
                  SelectedValue="{Binding CurrentVolunteer.TypeOfDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                  VerticalAlignment="Center" Margin="5" Height="25"/>

        <!-- Statistics Section (Read-only for existing volunteers) -->
        <GroupBox Grid.Row="13" Grid.ColumnSpan="2" Header="Statistics" 
                  Margin="5" Padding="10"
                  Visibility="{Binding ButtonText, Converter={StaticResource ConvertUpdateToVisibleKey}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Completed Calls:" FontWeight="Bold" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="{Binding CurrentVolunteer.SumCallsCompleted}" 
                           FontSize="16" HorizontalAlignment="Center" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="1" 
                           Text="Expired Calls:" FontWeight="Bold" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           Text="{Binding CurrentVolunteer.SumCallsExpired}" 
                           FontSize="16" HorizontalAlignment="Center" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" 
                           Text="Concluded Calls:" FontWeight="Bold" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="2" 
                           Text="{Binding CurrentVolunteer.SumCallsConcluded}" 
                           FontSize="16" HorizontalAlignment="Center" Margin="5"/>
            </Grid>
        </GroupBox>

        <!-- Button Section -->
        <StackPanel Grid.Row="15" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="10">
            
            <!-- Add/Update Button -->
            <Button Content="{Binding ButtonText}" 
                    Click="btnAddUpdate_Click"
                    Width="100" Height="40"
                    Margin="10,0"
                    FontSize="14">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ButtonText}" Value="Add">
                                <Setter Property="Background" Value="LightGreen"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ButtonText}" Value="Update">
                                <Setter Property="Background" Value="LightBlue"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Cancel Button -->
            <Button Content="Cancel" 
                    Click="btnCancel_Click"
                    Width="100" Height="40"
                    Margin="10,0"
                    Background="LightGray"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>