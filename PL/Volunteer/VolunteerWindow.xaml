<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Volunteer Details" Height="650" Width="500"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Closed="Window_Closed">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       Text="Volunteer Information" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- ID -->
            <Label Grid.Row="1" Grid.Column="0" Content="ID:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.id}" 
                     IsReadOnly="True" Background="LightGray" Margin="5" Height="25"/>

            <!-- Name -->
            <Label Grid.Row="2" Grid.Column="0" Content="Full Name:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay}" Margin="5" Height="25"/>

            <!-- Phone -->
            <Label Grid.Row="3" Grid.Column="0" Content="Phone:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="3" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.CallNumber, Mode=TwoWay}" Margin="5" Height="25"/>

            <!-- Email -->
            <Label Grid.Row="4" Grid.Column="0" Content="Email:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="4" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.EmailAddress, Mode=TwoWay}" Margin="5" Height="25"/>

            <!-- Password -->
            <Label Grid.Row="5" Grid.Column="0" Content="Password:" FontWeight="Bold" Margin="5"/>
            <PasswordBox Grid.Row="5" Grid.Column="1" 
                         Name="passwordBox" Margin="5" Height="25"/>

            <!-- Address -->
            <Label Grid.Row="6" Grid.Column="0" Content="Address:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="6" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.FullCurrentAddress, Mode=TwoWay}" 
                     TextWrapping="Wrap" Height="40" Margin="5"/>

            <!-- Latitude -->
            <Label Grid.Row="7" Grid.Column="0" Content="Latitude:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="7" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.Latitude}" 
                     IsReadOnly="True" Background="LightGray" Margin="5" Height="25"/>

            <!-- Longitude -->
            <Label Grid.Row="8" Grid.Column="0" Content="Longitude:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="8" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.Longitude}" 
                     IsReadOnly="True" Background="LightGray" Margin="5" Height="25"/>

            <!-- User Type -->
            <Label Grid.Row="9" Grid.Column="0" Content="User Type:" FontWeight="Bold" Margin="5"/>
            <ComboBox Grid.Row="9" Grid.Column="1" 
                      SelectedValue="{Binding CurrentVolunteer.CurrentPosition, Mode=TwoWay}" 
                      Margin="5" Height="25">
                <ComboBox.Items>
                    <ComboBoxItem Content="Volunteer" Tag="0"/>
                    <ComboBoxItem Content="Manager" Tag="1"/>
                </ComboBox.Items>
            </ComboBox>

            <!-- Active -->
            <Label Grid.Row="10" Grid.Column="0" Content="Active:" FontWeight="Bold" Margin="5"/>
            <CheckBox Grid.Row="10" Grid.Column="1" 
                      IsChecked="{Binding CurrentVolunteer.Active, Mode=TwoWay}" 
                      Content="Is Active" Margin="5"/>

            <!-- Distance -->
            <Label Grid.Row="11" Grid.Column="0" Content="Max Distance:" FontWeight="Bold" Margin="5"/>
            <TextBox Grid.Row="11" Grid.Column="1" 
                     Text="{Binding CurrentVolunteer.MaxDistanceForCall, Mode=TwoWay}" Margin="5" Height="25"/>

            <!-- Button -->
            <Button Grid.Row="12" Grid.ColumnSpan="2"
                    Content="{Binding ButtonText}" 
                    Click="btnAddUpdate_Click"
                    Width="150" Height="40" Margin="10"
                    FontSize="14" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ButtonText}" Value="Add">
                                <Setter Property="Background" Value="LightGreen"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ButtonText}" Value="Update">
                                <Setter Property="Background" Value="LightBlue"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </ScrollViewer>
</Window>