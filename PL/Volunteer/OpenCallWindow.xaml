<Window x:Class="PL.Volunteer.OpenCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        xmlns:conv="clr-namespace:PL.Converters"
        mc:Ignorable="d"
        Title="בחירת קריאה לטיפול" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FlowDirection="RightToLeft"
        Background="#F0F4F8">

    <Window.Resources>
        <!-- Converters -->
        <conv:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <conv:CallTypeToHebrewConverter x:Key="CallTypeToHebrewConverter"/>
        <conv:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter"/>

        <!-- ========== סגנונות ========== -->

        <!-- כותרת ראשית -->
        <Style x:Key="MainHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E3A8A"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- כותרת משנית -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- תווית -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- ערך -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>

        <!-- כרטיס -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- כפתור ראשי -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CBD5E1"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- כפתור משני -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- כפתור ביטול -->
        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- סגנון פריט ברשימה -->
        <Style x:Key="CallItemStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- ==================== Header ==================== -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="בחר קריאה לטיפול" 
                           Style="{StaticResource MainHeaderStyle}"
                           HorizontalAlignment="Right"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="נמצאו " 
                               FontSize="16"
                               Foreground="#64748B"/>
                    <TextBlock Text="{Binding CallsCount}" 
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#3B82F6"
                               Margin="5,0"/>
                    <TextBlock Text=" קריאות זמינות" 
                               FontSize="16"
                               Foreground="#64748B"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- ==================== Content ==================== -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0">
            <Grid>
                <!-- יש קריאות -->

                <ListBox ItemsSource="{Binding OpenCalls}"
                        Visibility="{Binding HasCalls, Converter={StaticResource BoolToVisibilityConverter}}"
                             SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                         SelectionMode="Single"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CallItemStyle}"
                                        MouseLeftButtonDown="CallItem_MouseLeftButtonDown"
                                        Width="775"
                                       Tag="{Binding}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- שורה 1: מספר קריאה -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                                   Orientation="Horizontal" 
                                                   Margin="0,0,0,8">
                                            <TextBlock Text="קריאה מס׳:" 
                                                      Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding IdCall}" 
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="#3B82F6"
                                                      Margin="8,0,0,0"/>
                                        </StackPanel>

                                        <!-- מרחק -->
                                        <Border Grid.Row="0" Grid.Column="1"
                                               Background="#DBEAFE"
                                               CornerRadius="6"
                                               Padding="12,6">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📍 " FontSize="14"/>
                                                <TextBlock FontSize="14" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#1E40AF">
                                                    <Run Text="{Binding DistanceFromVolunteer, StringFormat='{}{0:F2}'}"/>
                                                    <Run Text=" ק&quot;מ"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <!-- שורה 2: סוג קריאה -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Orientation="Horizontal" 
                                                   Margin="0,0,0,8">
                                            <TextBlock Text="סוג:" 
                                                      Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding Type, Converter={StaticResource CallTypeToHebrewConverter}}" 
                                                      Style="{StaticResource ValueStyle}"
                                                      FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <!-- שורה 3: כתובת -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Orientation="Horizontal" 
                                                   Margin="0,0,0,8">
                                            <TextBlock Text="כתובת:" 
                                                      Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding FullAddress}" 
                                                      Style="{StaticResource ValueStyle}"
                                                      TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <!-- שורה 4: תיאור -->
                                        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Orientation="Horizontal" 
                                                   Margin="0,0,0,8"
                                                   Visibility="{Binding description, Converter={StaticResource CollectionToVisibilityConverter}}">
                                            <TextBlock Text="תיאור:" 
                                                      Style="{StaticResource LabelStyle}"/>
                                            <TextBlock Text="{Binding description}" 
                                                      Style="{StaticResource ValueStyle}"
                                                      TextWrapping="Wrap"
                                                      FontStyle="Italic"/>
                                        </StackPanel>

                                        <!-- שורה 5: זמנים -->
                                        <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock Text="נפתחה:" 
                                                          Style="{StaticResource LabelStyle}"
                                                          FontSize="12"/>
                                                <TextBlock Text="{Binding CallStartTime, StringFormat='dd/MM/yyyy HH:mm'}" 
                                                          FontSize="12"
                                                          Foreground="#64748B"
                                                          Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <TextBlock Text="לטיפול עד:" 
                                                          Style="{StaticResource LabelStyle}"
                                                          FontSize="12"/>
                                                <TextBlock Text="{Binding MaxTimeForCall, StringFormat='dd/MM/yyyy HH:mm', FallbackValue='לא צוין'}" 
                                                          FontSize="12"
                                                          Foreground="#EF4444"
                                                          FontWeight="SemiBold"
                                                          Margin="5,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>

                                <!-- כשנבחר -->
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E0F2FE"/>
                                        <!-- כחול בהיר -->
                                        <Setter Property="BorderBrush" Value="#3B82F6"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                

                <!-- אין קריאות -->
                <StackPanel VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Visibility="{Binding HasCalls, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="😔" 
                              FontSize="72"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    <TextBlock Text="אין קריאות זמינות כרגע" 
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="#64748B"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="נסה לרענן את הרשימה מאוחר יותר" 
                              FontSize="16"
                              Foreground="#94A3B8"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ==================== Footer - Buttons ==================== -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                      Text="💡 לחץ על קריאה כדי לבחור אותה"
                      FontSize="13"
                      Foreground="#64748B"
                      VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    Content="אישור ובחירה"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="SelectCallButton_Click"
                    IsEnabled="{Binding HasCalls}"
                    Margin="0,0,12,0"/>

            <Button Grid.Column="2"
                    Content="ביטול"
                    Style="{StaticResource CancelButtonStyle}"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>