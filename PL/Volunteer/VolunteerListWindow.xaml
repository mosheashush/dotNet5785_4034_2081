<Window x:Class="PL.Volunteer.VolunteerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="ניהול מתנדבים | Volunteer Management" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Style="{StaticResource ModernCard}" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          Fill="#4A90E2" 
                          Width="32" 
                          Height="32"
                          Stretch="Uniform"
                          Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="ניהול מתנדבים" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#2C3E50"/>
                        <TextBlock Text="Volunteer Management System" 
                                   FontSize="14" 
                                   Foreground="#7F8C8D"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Stats Counter -->
                <Border Grid.Column="1" 
                        Background="#E8F5E9" 
                        CornerRadius="8" 
                        Padding="15,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="סה״כ מתנדבים:" 
                                   FontSize="14" 
                                   Foreground="#388E3C"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding VolunteersList.Count}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#2E7D32"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
                Style="{StaticResource ModernCard}" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Icon & Label -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="20,0,20,0">
                    <TextBlock Text=":סינון לפי" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"
                               Margin="-150,0,0,0"/>
                </StackPanel>

                <!-- Filter ComboBox -->
                <ComboBox Grid.Column="1" 
                          Style="{StaticResource ModernComboBox}"
                          SelectionChanged="Status_SelectionChanged"
                          SelectedIndex="0" Margin="0,1,150,2">
                    <ComboBoxItem Content="🔹              הכל"/>
                    <ComboBoxItem Content="✅          פעילים"/>
                    <ComboBoxItem Content="❌     לא פעילים"/>
                </ComboBox>
                
                <Path Data="M14,12V19.88C14.04,20.18 13.94,20.5 13.71,20.71C13.32,21.1 12.69,21.1 12.3,20.71L10.29,18.7C10.06,18.47 9.96,18.16 10,17.87V12H9.97L4.21,4.62C3.87,4.19 3.95,3.56 4.38,3.22C4.57,3.08 4.78,3 5,3V3H19V3C19.22,3 19.43,3.08 19.62,3.22C20.05,3.56 20.13,4.19 19.79,4.62L14.03,12H14Z"
                          Fill="#4A90E2" 
                          Width="20" 
                          Height="20"
                          Stretch="Uniform"
                          Margin="10,0,10,0"/>


                <!-- Add Button -->
                <Button Grid.Column="3" 
                        Style="{StaticResource AddButton}"
                        Click="btnAdd_Click"
                        Width="180">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                              Fill="White" 
                              Width="18" 
                              Height="18"
                              Stretch="Uniform"
                              Margin="0,0,8,0"/>
                        <TextBlock Text="הוסף מתנדב חדש"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" 
                Style="{StaticResource ModernCard}">
            <DataGrid ItemsSource="{Binding VolunteersList}"
                      SelectedItem="{Binding SelectedVolunteer, Mode=TwoWay}"
                      MouseDoubleClick="DataGrid_MouseDoubleClick" SelectionChanged="DataGrid_SelectionChanged">


                <DataGrid.Columns>
                    <!-- ID Column -->
                    <DataGridTextColumn Header="ת.ז" 
                                        Binding="{Binding IdVolunteer}" 
                                        Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#34495E"/>
                                <Setter Property="Margin" Value="10,10,0,10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Name Column -->
                    <DataGridTextColumn Header="שם מלא" 
                                        Binding="{Binding FullName}" 
                                        Width="*"
                                        MinWidth="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Setter Property="HorizontalAlignment" Value ="Left"/>
                                <Setter Property="Margin" Value="10,10,0,10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Active Column -->
                    <DataGridCheckBoxColumn Header="בפעילות"
                        Binding="{Binding Active}"
                        Width="140"
                        IsReadOnly="True">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>


                    <!-- Type Call Column -->
                    <DataGridTextColumn Header="סוג הקריאה" 
                                        Binding="{Binding Type}" 
                                        Width="*"
                                        MinWidth="180">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Foreground" Value="#5D6D7E"/>
                                <Setter Property="FontStyle" Value="Italic"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="0,10,0,10"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Statistics Column -->
                    <DataGridTemplateColumn Header="סטטיסטיקה" Width="250">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Border Background="#E8F5E9" CornerRadius="5" Padding="5,2">
                                        <TextBlock Text="{Binding SumCallsCompleted, StringFormat='✅ {0}'}" 
                               Foreground="#2E7D32" FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#FFEBEE" CornerRadius="5" Padding="5,2">
                                        <TextBlock Text="{Binding SumCallsConcluded, StringFormat='❌ {0}'}"
                               Foreground="#F57C00"  FontWeight="SemiBold"/>
                                    </Border>
                                    <Border Background="#FFF3E0" CornerRadius="5" Padding="5,2">
                                        <TextBlock Text="{Binding SumCallsExpired, StringFormat='⌛ {0}'}"
                               Foreground="#C62828" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="פעולות" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                    <!-- Update Button-->
                                    <Button Style="{StaticResource ModernButton}"
                        Click="btnUpdate_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25M20.71,7.04
                                    C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29
                                    C18,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04Z"
                              Fill="White"
                              Width="14"
                              Height="14"
                              Stretch="Uniform"
                              Margin="0,0,5,0"/>
                                            <TextBlock Text="עדכן"/>
                                        </StackPanel>
                                    </Button>

                                    <!-- Delete Button-->
                                    <Button Style="{StaticResource DeleteButton}"
                        Click="btnDelete_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19
                                    M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                              Fill="White"
                              Width="14"
                              Height="14"
                              Stretch="Uniform"
                              Margin="0,0,5,0"/>
                                            <TextBlock Text="מחק"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer Section -->
        <Border Grid.Row="3" 
                Background="#ECF0F1" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,20,0,0">
            <Grid>
                <TextBlock Text="💡 טיפ: לחץ פעמיים על שורה לעריכת המתנדב | Tip: Double-click a row to edit volunteer" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                <TextBlock HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <Run Text="נבנה באהבה ❤️ | Built with" FontSize="11" Foreground="#95A5A6"/>
                    <Run Text="WPF" FontSize="11" FontWeight="Bold" Foreground="#4A90E2"/>
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</Window>