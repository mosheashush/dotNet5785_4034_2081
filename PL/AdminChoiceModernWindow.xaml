<Window x:Class="PL.AdminChoiceModernWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="בחירת חלון" Height="200" Width="350" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="#CCFFFFFF" >

    <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Padding="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="לאיזה חלון ברצונך להיכנס?" 
                       FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="מנהל" Width="120" Height="40" Margin="10,0"
                        Background="#FF4CAF50" Foreground="White" FontWeight="Bold"
                        Click="AdminButton_Click"/>

                <Button Content="מתנדב" Width="120" Height="40" Margin="10,0"
                        Background="#FF2196F3" Foreground="White" FontWeight="Bold"
                        Click="VolunteerButton_Click"/>
            </StackPanel>

            <Button Content="ביטול" Width="80" Height="30" Margin="0,20,0,0"
                    Background="#FFB0B0B0" Foreground="White" FontWeight="Bold"
                    HorizontalAlignment="Center" Click="CancelButton_Click"/>
        </StackPanel>
    </Border>
</Window>
