<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="כניסה למערכת" 
        Height="810" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        FlowDirection="RightToLeft">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="מערכת ניהול מתנדבים וקריאות" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="כניסה למערכת" 
                          FontSize="16" 
                          Foreground="#ECF0F1" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" 
                Margin="30,20,30,20" 
                CornerRadius="10"
                BorderBrush="#BDC3C7" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#95A5A6" 
                                 BlurRadius="15" 
                                 ShadowDepth="5" 
                                 Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="30" VerticalAlignment="Center">
                <!-- אייקון משתמש -->
                <Border Width="80" Height="80" 
                       Background="#3498DB" 
                       CornerRadius="40" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20">
                    <TextBlock Text="👤" 
                              FontSize="40" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Foreground="White"/>
                </Border>

                <!-- כותרת -->
                <TextBlock Text="ברוכים הבאים" 
                          FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,20"/>

                <!-- שדה תעודת זהות/שם משתמש - עם Binding -->
                <TextBlock Text="תעודת זהות:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernTextBox}"
                        Height="40"/>

                <!-- שדה סיסמא - חריג מהכלל, צריך שם -->
                <TextBlock Text="סיסמא:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="passwordBox"
                            Style="{StaticResource ModernPasswordBox}"
                            Height="40"/>

                <!-- תיבת סימון "זכור אותי" - עם Binding -->
                <CheckBox IsChecked="{Binding RememberMe, Mode=TwoWay}"
                         Content="זכור אותי" 
                         Margin="0,10,0,0" 
                         FontSize="13"
                         Foreground="#7F8C8D"/>

                <!-- כפתור כניסה ראשי - עם אירוע Click -->
                <Button Content="🔐 כניסה למערכת" 
                       Style="{StaticResource ModernButton}"
                       Click="btnLogin_Click"
                       Height="50" 
                       Margin="0,20,0,0"/>

                <!-- הודעות מצב - עם Binding -->
                <TextBlock Text="{Binding StatusMessage}" 
                          HorizontalAlignment="Center" 
                          Margin="0,15,0,0" 
                          FontSize="13"
                          FontWeight="SemiBold"
                          TextWrapping="Wrap"
                          Foreground="{Binding StatusMessageColor}"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="פרויקט דוט נט תשפ&quot;ה - מערכת ניהול מתנדבים" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          FontSize="11"/>
                <TextBlock Text="למידע נוסף או תמיכה טכנית, אנא פנו למנהל המערכת" 
                          Foreground="#95A5A6" 
                          HorizontalAlignment="Center" 
                          FontSize="10" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>