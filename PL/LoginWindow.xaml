<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Window.Resources>
        <!-- סטייל לכפתורים -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#BDC3C7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- סטייל לכפתור ירוק -->
        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#27AE60"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- סטייל לכפתור אדום -->
        <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- סטייל לתיבות טקסט -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- סטייל לPasswordBox -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel>
                <TextBlock Text="מערכת ניהול מתנדבים וקריאות" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="כניסה למערכת" 
                          FontSize="16" 
                          Foreground="#ECF0F1" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" Background="White" 
                Margin="30,20,30,20" 
                CornerRadius="10"
                BorderBrush="#BDC3C7" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#95A5A6" 
                                 BlurRadius="15" 
                                 ShadowDepth="5" 
                                 Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="30" VerticalAlignment="Center">
                <!-- אייקון משתמש -->
                <Border Width="80" Height="80" 
                       Background="#3498DB" 
                       CornerRadius="40" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20">
                    <TextBlock Text="👤" 
                              FontSize="40" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Foreground="White"/>
                </Border>

                <!-- כותרת -->
                <TextBlock Text="ברוכים הבאים" 
                          FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2C3E50" 
                          Margin="0,0,0,20"/>

                <!-- שדה תעודת זהות/שם משתמש - עם Binding -->
                <TextBlock Text="תעודת זהות:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                        Style="{StaticResource ModernTextBox}"
                        Height="40"/>

                <!-- שדה סיסמא - חריג מהכלל, צריך שם -->
                <TextBlock Text="סיסמא:" 
                          FontSize="14" FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,15,0,5"/>
                <PasswordBox x:Name="passwordBox"
                            Style="{StaticResource ModernPasswordBox}"
                            Height="40"/>

                <!-- תיבת סימון "זכור אותי" - עם Binding -->
                <CheckBox IsChecked="{Binding RememberMe, Mode=TwoWay}"
                         Content="זכור אותי" 
                         Margin="0,10,0,0" 
                         FontSize="13"
                         Foreground="#7F8C8D"/>

                <!-- כפתור כניסה ראשי - עם אירוע Click -->
                <Button Content="🔐 כניסה למערכת" 
                       Style="{StaticResource ModernButton}"
                       Click="btnLogin_Click"
                       Height="50" 
                       Margin="0,20,0,0"/>

                <!-- מחיצה -->
                <Border Height="1" Background="#BDC3C7" Margin="0,15,0,15"/>

                <!-- כפתורי כניסה מהירה -->
                <TextBlock Text="כניסה מהירה:" 
                          FontSize="12" 
                          Foreground="#7F8C8D" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>

                <!-- הודעות מצב - עם Binding -->
                <TextBlock Text="{Binding StatusMessage}" 
                          HorizontalAlignment="Center" 
                          Margin="0,15,0,0" 
                          FontSize="13"
                          FontWeight="SemiBold"
                          TextWrapping="Wrap"
                          Foreground="{Binding StatusMessageColor}"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="פרויקט דוט נט תשפ&quot;ה - מערכת ניהול מתנדבים" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          FontSize="11"/>
                <TextBlock Text="למידע נוסף או תמיכה טכנית, אנא פנו למנהל המערכת" 
                          Foreground="#95A5A6" 
                          HorizontalAlignment="Center" 
                          FontSize="10" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
